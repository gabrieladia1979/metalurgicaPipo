---
interface Props {
  clients: (string | { src: string; alt: string; className?: string })[];
}

const { clients } = Astro.props;
---

<div class="w-full inline-flex flex-nowrap overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-128px),transparent_100%)]">
  <ul class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll">
    {clients.map((client) => (
      <li>
        <div class="h-24 w-48 bg-white border border-gray-200 flex items-center justify-center rounded-xl shadow-sm hover:shadow-md transition-shadow p-4 overflow-hidden">
          {typeof client === 'string' ? (
            <span class="text-gray-600 font-bold text-center text-lg">{client}</span>
          ) : (
            <img src={client.src} alt={client.alt} class={`max-h-full max-w-full object-contain ${client.className || ''}`} />
          )}
        </div>
      </li>
    ))}
  </ul>
  <ul class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll" aria-hidden="true">
    {clients.map((client) => (
      <li>
        <div class="h-24 w-48 bg-white border border-gray-200 flex items-center justify-center rounded-xl shadow-sm hover:shadow-md transition-shadow p-4 overflow-hidden">
            {typeof client === 'string' ? (
            <span class="text-gray-600 font-bold text-center text-lg">{client}</span>
          ) : (
            <img src={client.src} alt={client.alt} class={`max-h-full max-w-full object-contain ${client.className || ''}`} />
          )}
        </div>
      </li>
    ))}
  </ul>
</div>
