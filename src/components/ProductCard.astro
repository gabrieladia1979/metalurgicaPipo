---
// src/components/ProductCard.astro

interface Props {
  image: string;
  title: string;
  category: string;
  description: string;
  whatsappMessage: string;
}

const { image, title, category, description, whatsappMessage } = Astro.props;
const whatsappNumber = "5491100000000"; // Reemplazar con número real
---

<div class="group bg-white rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden flex flex-col h-full">
  
  {/* Imagen con efecto zoom */}
  <div class="h-64 overflow-hidden bg-gray-50 flex items-center justify-center p-4">
    {image ? (
      <img 
        src={image} 
        alt={title} 
        class="h-full object-contain group-hover:scale-110 transition-transform duration-500"
      />
    ) : (
      <div class="text-gray-300 text-center">
        <svg class="w-24 h-24 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <p class="text-sm">Sin imagen</p>
      </div>
    )}
  </div>

  {/* Contenido */}
  <div class="p-5 flex flex-col flex-grow">
    <span class="text-xs font-semibold text-bergner-red uppercase tracking-wide mb-2">
      {category}
    </span>
    
    <h3 class="text-lg font-bold text-gray-900 mb-2 leading-tight line-clamp-2">
      {title}
    </h3>
    
    <p class="text-sm text-gray-600 mb-4 line-clamp-2 flex-grow">
      {description}
    </p>
    
    {/* Botón de acción */}
    <a 
      href={`https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`}
      target="_blank"
      rel="noopener noreferrer"
      class="mt-auto w-full flex items-center justify-center gap-2 bg-green-600 hover:bg-green-700 text-white py-3 px-4 rounded-lg font-bold transition-colors duration-200"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.67-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.076 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421-7.403h-.004a9.87 9.87 0 00-4.9 1.225l-.35-.177-3.632.363.369-3.431-.211-.338a9.9 9.9 0 011.527-5.645C6.45.931 10.437-.046 14.122 1.261c3.686 1.307 6.348 4.708 6.348 8.653 0 2.373-.72 4.619-2.086 6.52l-.26.39 3.04.364-.368 3.471-.394-.221a9.875 9.875 0 01-6.302 2.216h-.003c-5.487 0-9.979-4.492-9.979-9.979 0-2.633 1.024-5.115 2.886-7.041z"/>
