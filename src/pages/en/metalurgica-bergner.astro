---
// src/pages/en/nosotros.astro
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ClientCarousel from '../../components/ClientCarousel.astro';
import site from '../../data/site.json';

const brands = [
  "ABC", "Atelier Fran√ßois", "Bellis & Morcom", "SIAD", "AJAX", "LMF", 
  "ARIEL", "Nuovo Pignone", "Ingersoll Rand", "Atlas Copco", 
  "Mitsui", "Joy", "Sabroe", "Mycom"
];

const clients = [
  "Pampa Energ√≠a", "YPF", "Galileo", "PET Sector (bottling)", 
  "Chemical and Petrochemical Industry", "Gas compression plants"
];

const carouselImages = [
  { src: "/carruselmarcas/pampa.png", alt: "Pampa Energ√≠a", className: "scale-[2]" },
  { src: "/carruselmarcas/ypf.jpg", alt: "YPF" },
  { src: "/carruselmarcas/galileo.png", alt: "Galileo" },
  { src: "/carruselmarcas/bellis.png", alt: "Bellis & Morcom", className: "scale-75" },
  { src: "/carruselmarcas/logonuevo1.png", alt: "Client" },
  { src: "/carruselmarcas/logonuevo2.png", alt: "Client" },
  { src: "/carruselmarcas/logonuevo3.png", alt: "Client" }
];
---

<Layout title="About Us">
  <Header />
  
  <main class="min-h-screen bg-white">
    {/* Hero */}
    <section class="bg-gradient-to-b from-gray-50 to-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          About Us
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl">
          Industrial excellence and metallurgical precision with over 30 years of experience.
        </p>
      </div>
    </section>

    {/* History */}
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">Metal√∫rgica Bergner</h2>
            <p class="text-gray-600 mb-4 leading-relaxed">
              Metal√∫rgica Bergner stands out not only for the quality of its products, all manufactured with high quality raw material from countries such as Sweden, Austria or Germany; but also for the quality of the workforce used in the manufacture of our products with personnel who have been in the sector for over 30 years.
            </p>
            <p class="text-gray-600 mb-4 leading-relaxed">
              These two pillars make our products highly differentiated from the rest of the market, offering our clients an exclusive product.
            </p>
            <p class="text-gray-600 leading-relaxed">
              Metal√∫rgica Bergner has always been at the forefront of innovation, incorporating the necessary machinery for this purpose. We offer valve repair service, recovering main parts (covers and seats) and replacing all wear parts (discs, dampers and springs).
            </p>
          </div>
          <div class="relative rounded-2xl overflow-hidden shadow-xl h-96">
            <img 
              src="/docs/empresa.png" 
              alt="Metal√∫rgica Bergner Facilities" 
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </section>

    {/* Values */}
    <section class="bg-gray-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Our Pillars</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100">
            <div class="text-4xl mb-4">‚úÖ</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Raw Material</h3>
            <p class="text-gray-600">
              Certified materials from Sweden, Austria and Germany for maximum durability.
            </p>
          </div>
          <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100">
            <div class="text-4xl mb-4">ü§ù</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Experience</h3>
            <p class="text-gray-600">
              Highly qualified staff with over 30 years of experience in the metallurgical sector.
            </p>
          </div>
          <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100">
            <div class="text-4xl mb-4">‚ö°</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Innovation</h3>
            <p class="text-gray-600">
              Latest technology machinery and optimized processes for an exclusive product.
            </p>
          </div>
        </div>
      </div>
    </section>

    {/* Brands and Clients */}
    <section class="bg-gray-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-12 text-center">Our Experience</h2>
        
        <div class="grid md:grid-cols-2 gap-16">
          {/* Brands */}
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-8 pb-4 border-b border-gray-200">Compressor Brands</h3>
            <p class="text-gray-600 mb-6">We work with the main market brands:</p>
            <ul class="grid grid-cols-2 gap-4">
              {brands.map(brand => (
                <li class="flex items-center gap-2 text-gray-700 font-medium">
                  <span class="text-bergner-red">‚ñ™</span> {brand}
                </li>
              ))}
            </ul>
          </div>

          {/* Clients */}
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-8 pb-4 border-b border-gray-200">Client Companies</h3>
            <p class="text-gray-600 mb-6">They trust us:</p>
            <ul class="space-y-4">
              {clients.map(client => (
                <li class="flex items-center gap-3 text-lg text-gray-700">
                  <span class="text-green-600">‚úì</span> {client}
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>

      <div class="mt-16 w-full">
        <ClientCarousel clients={carouselImages} />
      </div>
    </section>

    {/* CTA */}
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Want to know more?</h2>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
          We're available for personalized consultations. Contact us via WhatsApp or visit our offices.
        </p>
        <a 
          href={`https://wa.me/${site.whatsappNumber}?text=${encodeURIComponent('Hello, I want to learn more about Bergner Argentina...')}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block bg-bergner-red hover:bg-red-700 text-white px-8 py-4 rounded-lg font-bold transition-colors"
        >
          Contact Us Now
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
