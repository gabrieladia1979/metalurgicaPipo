---
// src/pages/en/nosotros.astro
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import site from '../../data/site.json';

const brands = [
  "ABC", "Atelier Fran√ßois", "Bellis & Morcom", "SIAD", "AJAX", "LMF", 
  "ARIEL", "Nuovo Pignone", "Ingersoll Rand", "Atlas Copco", 
  "Mitsui", "Joy", "Sabroe", "Mycom"
];

const clients = [
  "Pampa Energ√≠a", "YPF", "Galileo", "PET Sector (bottling)", 
  "Chemical and Petrochemical Industry", "Gas compression plants"
];
---

<Layout title="About Us">
  <Header />
  
  <main class="min-h-screen bg-white">
    {/* Hero */}
    <section class="bg-gradient-to-b from-gray-50 to-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          About Us
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl">
          Industrial excellence and metallurgical precision with over 30 years of experience.
        </p>
      </div>
    </section>

    {/* History */}
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">Metal√∫rgica Bergner</h2>
            <p class="text-gray-600 mb-4 leading-relaxed">
              Metal√∫rgica Bergner stands out not only for the quality of its products, all manufactured with high quality raw material from countries such as Sweden, Austria or Germany; but also for the quality of the workforce used in the manufacture of our products with personnel who have been in the sector for over 30 years.
            </p>
            <p class="text-gray-600 mb-4 leading-relaxed">
              These two pillars make our products highly differentiated from the rest of the market, offering our clients an exclusive product.
            </p>
            <p class="text-gray-600 leading-relaxed">
              Metal√∫rgica Bergner has always been at the forefront of innovation, incorporating the necessary machinery for this purpose. We offer valve repair service, recovering main parts (covers and seats) and replacing all wear parts (discs, dampers and springs).
            </p>
          </div>
          <div class="relative rounded-2xl overflow-hidden shadow-xl h-96">
            <img 
              src="/docs/empresa.png" 
              alt="Metal√∫rgica Bergner Facilities" 
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </section>

    {/* Values */}
    <section class="bg-gray-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Our Pillars</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100">
            <div class="text-4xl mb-4">‚úÖ</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Raw Material</h3>
            <p class="text-gray-600">
              Certified materials from Sweden, Austria and Germany for maximum durability.
            </p>
          </div>
          <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100">
            <div class="text-4xl mb-4">ü§ù</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Experience</h3>
            <p class="text-gray-600">
              Highly qualified staff with over 30 years of experience in the metallurgical sector.
            </p>
          </div>
          <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100">
            <div class="text-4xl mb-4">‚ö°</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Innovation</h3>
            <p class="text-gray-600">
              Latest technology machinery and optimized processes for an exclusive product.
            </p>
          </div>
        </div>
      </div>
    </section>

    {/* Quality ISO 9001 */}
    <section class="py-20 bg-white overflow-hidden relative">
      <div class="absolute inset-0 bg-gray-50 transform -skew-y-3 origin-top-left z-0 h-full w-full opacity-50"></div>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center mb-16">
          <span class="inline-block py-1 px-3 rounded-full bg-blue-100 text-blue-800 text-sm font-semibold tracking-wide uppercase mb-2">Certified Excellence</span>
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">ISO 9001:2015 Quality</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            At Metal√∫rgica Bergner S.A., quality is not just a goal, it is our operating standard.
          </p>
        </div>
        
        <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-gray-100">
          <div class="grid md:grid-cols-2">
            <div class="p-10 md:p-12 flex flex-col justify-center bg-gradient-to-br from-gray-900 to-gray-800 text-white">
              <h3 class="text-3xl font-bold mb-6">Comprehensive Management System</h3>
              <p class="text-gray-300 mb-8 text-lg leading-relaxed">
                Our commitment to continuous improvement is backed by ISO 9001:2015 certification, ensuring that every process, from raw material selection to final delivery, meets the highest international standards.
              </p>
              <ul class="space-y-4">
                <li class="flex items-start gap-4">
                  <div class="w-8 h-8 rounded-full bg-green-500 flex items-center justify-center flex-shrink-0 mt-1">‚úì</div>
                  <div>
                    <h4 class="font-bold text-lg">Total Traceability</h4>
                    <p class="text-gray-400 text-sm">Detailed tracking of every manufactured part.</p>
                  </div>
                </li>
                <li class="flex items-start gap-4">
                  <div class="w-8 h-8 rounded-full bg-green-500 flex items-center justify-center flex-shrink-0 mt-1">‚úì</div>
                  <div>
                    <h4 class="font-bold text-lg">Constant Audits</h4>
                    <p class="text-gray-400 text-sm">Periodic internal and external controls.</p>
                  </div>
                </li>
              </ul>
            </div>

            <div class="p-10 md:p-12 bg-white flex flex-col justify-center">
              <div class="grid gap-8">
                <div class="flex gap-5">
                  <div class="w-12 h-12 rounded-lg bg-bergner-red/10 flex items-center justify-center flex-shrink-0 text-2xl text-bergner-red">üìè</div>
                  <div>
                    <h4 class="text-xl font-bold text-gray-900 mb-2">100% Interchangeability</h4>
                    <p class="text-gray-600">
                      We guarantee that our spare parts are dimensionally and functionally identical to the originals, allowing direct replacement without adaptations.
                    </p>
                  </div>
                </div>
                
                <div class="flex gap-5">
                  <div class="w-12 h-12 rounded-lg bg-bergner-red/10 flex items-center justify-center flex-shrink-0 text-2xl text-bergner-red">üîç</div>
                  <div>
                    <h4 class="text-xl font-bold text-gray-900 mb-2">Dimensional Control</h4>
                    <p class="text-gray-600">
                      We use calibrated precision instruments to verify critical tolerances in our metrology laboratories.
                    </p>
                  </div>
                </div>

                <div class="flex gap-5">
                  <div class="w-12 h-12 rounded-lg bg-bergner-red/10 flex items-center justify-center flex-shrink-0 text-2xl text-bergner-red">üß™</div>
                  <div>
                    <h4 class="text-xl font-bold text-gray-900 mb-2">Material Analysis</h4>
                    <p class="text-gray-600">
                      Hardness and chemical composition tests to ensure the resistance and durability required by operational demands.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Brands and Clients */}
    <section class="bg-gray-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-12 text-center">Our Experience</h2>
        
        <div class="grid md:grid-cols-2 gap-16">
          {/* Brands */}
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-8 pb-4 border-b border-gray-200">Compressor Brands</h3>
            <p class="text-gray-600 mb-6">We work with the main market brands:</p>
            <ul class="grid grid-cols-2 gap-4">
              {brands.map(brand => (
                <li class="flex items-center gap-2 text-gray-700 font-medium">
                  <span class="text-bergner-red">‚ñ™</span> {brand}
                </li>
              ))}
            </ul>
          </div>

          {/* Clients */}
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-8 pb-4 border-b border-gray-200">Client Companies</h3>
            <p class="text-gray-600 mb-6">They trust us:</p>
            <ul class="space-y-4">
              {clients.map(client => (
                <li class="flex items-center gap-3 text-lg text-gray-700">
                  <span class="text-green-600">‚úì</span> {client}
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>

    {/* CTA */}
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Want to know more?</h2>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
          We're available for personalized consultations. Contact us via WhatsApp or visit our offices.
        </p>
        <a 
          href={`https://wa.me/${site.whatsappNumber}?text=${encodeURIComponent('Hello, I want to learn more about Bergner Argentina...')}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block bg-bergner-red hover:bg-red-700 text-white px-8 py-4 rounded-lg font-bold transition-colors"
        >
          Contact Us Now
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
