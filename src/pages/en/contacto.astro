---
// src/pages/en/contacto.astro
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import site from '../../data/site.json';
---

<Layout title="Contact">
  <Header />
  
  <main class="min-h-screen bg-white">
    {/* Hero */}
    <section class="bg-gradient-to-b from-gray-50 to-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Contact
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl">
          We're here to help. Get in touch with us in the way that works best for you.
        </p>
      </div>
    </section>

    {/* Content - Redesigned without form */}
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
            
            {/* Address */}
            <div class="bg-gray-50 rounded-2xl p-8 flex flex-col items-center text-center shadow-sm hover:shadow-md transition-shadow group">
               <div class="w-16 h-16 bg-bergner-red/10 group-hover:bg-bergner-red/20 rounded-full flex items-center justify-center mb-6 text-bergner-red transition-colors">
                  <span class="text-3xl">ğŸ“</span>
               </div>
               <h3 class="font-bold text-gray-900 mb-2 text-xl">Address</h3>
               <p class="text-gray-600 leading-relaxed">
                 {site.address}
               </p>
            </div>

            {/* Phone */}
            <div class="bg-gray-50 rounded-2xl p-8 flex flex-col items-center text-center shadow-sm hover:shadow-md transition-shadow group">
               <div class="w-16 h-16 bg-bergner-red/10 group-hover:bg-bergner-red/20 rounded-full flex items-center justify-center mb-6 text-bergner-red transition-colors">
                  <span class="text-3xl">ğŸ“</span>
               </div>
               <h3 class="font-bold text-gray-900 mb-2 text-xl">Phone</h3>
               <p class="text-gray-600 font-medium text-lg mb-1">{site.phone}</p>
               <p class="text-gray-500 text-sm">Monday to Friday<br/>08:00 - 17:00.</p>
            </div>

            {/* Email */}
            <div class="bg-gray-50 rounded-2xl p-8 flex flex-col items-center text-center shadow-sm hover:shadow-md transition-shadow group">
               <div class="w-16 h-16 bg-bergner-red/10 group-hover:bg-bergner-red/20 rounded-full flex items-center justify-center mb-6 text-bergner-red transition-colors">
                  <span class="text-3xl">ğŸ“§</span>
               </div>
               <h3 class="font-bold text-gray-900 mb-2 text-xl">Email</h3>
               <a href={`mailto:${site.email}`} class="text-bergner-red hover:text-red-700 font-medium text-lg break-all transition-colors cursor-pointer">
                 {site.email}
               </a>
               <p class="text-gray-500 text-sm mt-1">Inquiries and Quotes.</p>
            </div>

            {/* WhatsApp */}
            <div class="bg-gray-50 rounded-2xl p-8 flex flex-col items-center text-center shadow-sm hover:shadow-md transition-shadow group">
               <div class="w-16 h-16 bg-green-600/10 group-hover:bg-green-600/20 rounded-full flex items-center justify-center mb-6 text-green-600 transition-colors">
                  <span class="text-3xl">ğŸ’¬</span>
               </div>
               <h3 class="font-bold text-gray-900 mb-2 text-xl">WhatsApp</h3>
               <p class="text-gray-600 mb-4">{site.phone}</p>
               <a 
                 href={`https://wa.me/${site.whatsappNumber}?text=${encodeURIComponent('Hello, I want to inquire...')}`}
                 target="_blank"
                 rel="noopener noreferrer"
                 class="inline-block bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-full font-bold transition-colors shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
               >
                 Send Message
               </a>
            </div>

        </div>

        {/* Social Networks */}
        <div class="text-center border-t border-gray-100 pt-16">
            <h3 class="font-bold text-gray-900 mb-8 text-2xl">Follow Us</h3>
            <div class="flex gap-6 justify-center">
            <a href="#" class="w-14 h-14 bg-gray-100 hover:bg-bergner-red hover:text-white rounded-full flex items-center justify-center transition-all text-2xl duration-300">
                f
            </a>
            <a href="#" class="w-14 h-14 bg-gray-100 hover:bg-bergner-red hover:text-white rounded-full flex items-center justify-center transition-all text-2xl duration-300">
                ğŸ“·
            </a>
            <a href="#" class="w-14 h-14 bg-gray-100 hover:bg-bergner-red hover:text-white rounded-full flex items-center justify-center transition-all text-2xl duration-300">
                ğŸ¥
            </a>
            </div>
        </div>

      </div>
    </section>

    {/* Map */}
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Location</h2>
        <div class="rounded-xl overflow-hidden shadow-lg h-96 bg-gray-200">
          <iframe
            src="https://www.google.com/maps/embed?pb=!4v1768578270776!6m8!1m7!1spjoI7bLf-dz8a3KwkGXExA!2m2!1d-34.54203012634142!2d-58.51985884123237!3f259!4f0!5f0.7820865974627469"
            width="600"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            class="w-full h-full"
            title="Location map"
          ></iframe>
        </div>
      </div>
    </section>

    <!-- Downloads: Company Summaries -->
    <section class="py-12 bg-white border-t border-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Company Summaries</h2>
        <p class="text-gray-600 mb-6">Download the institutional profiles in PDF.</p>

        <div class="grid md:grid-cols-2 gap-6">
          <a href="/pdf/PRESENTACION%20BERGNER%201%20ESP..pdf" target="_blank" rel="noopener noreferrer" class="flex items-center justify-between p-4 border rounded hover:shadow-sm">
            <div>
              <p class="font-semibold text-gray-900">Bergner Presentation â€“ ESP</p>
              <p class="text-sm text-gray-500">Commercial overview and product lines.</p>
            </div>
            <div class="text-sm text-bergner-red font-medium">Download</div>
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
